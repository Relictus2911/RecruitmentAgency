<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="RecruitmentAgency.Models" assembly="RecruitmentAgency">

  <class name="User" table="Users" dynamic-update="true">
    <cache usage="read-write"/>
    <id name="Id">
      <column name="Id" sql-type="int" not-null="true"/>
      <generator class="native"/>
    </id>
    <property name="UserName">
      <column name="UserName"  not-null="true" />
    </property>
    <property name="Password" >
      <column name="Password"  not-null="true"/>
    </property>
    <property name="Role" >
      <column name="Role" sql-type="PersistentEnum" not-null="true"/>
    </property>
    <one-to-one name="Candidate" class="Candidate" property-ref="UserId" cascade="all" />
  </class>
  
</hibernate-mapping>